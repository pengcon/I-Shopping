<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/urbanist_family</item>
    </style>

    <style name="AppText.BodySmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.BodySmall.GreyScale900">
        <item name="android:textColor">@color/greyscale_900</item>
    </style>

    <style name="AppText.BodySmall.GreyScale900.Medium">
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>

    <style name="AppText.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.BodyLarge.GreyScale600">
        <item name="android:textColor">@color/greyscale_600</item>
    </style>

    <style name="AppText.H2">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppText.H2.GreyScale900">
        <item name="android:textColor">@color/greyscale_900</item>
    </style>

    <style name="AppText.H2.GreyScale900.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.H5">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.H5.GreyScale900">
        <item name="android:textColor">@color/greyscale_900</item>
    </style>

    <style name="AppText.H5.GreyScale900.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppText.H6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppText.H6.GreyScale900">
        <item name="android:textColor">@color/greyscale_900</item>
    </style>

    <style name="AppText.H6.GreyScale900.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppRoundedImage">
        <item name="cornerSize">32dp</item>
    </style>
</resources>